production:
   bin_path: '/usr/local/sphinx/bin'
   pid_file: '<%= File.join(shared_path, 'pids', 'searchd.production.pid') %>'
   config_file: '<%= File.join(shared_path, 'sphinx_config', 'production.sphinx.conf') %>'
   searchd_file_path: '<%= File.join(shared_path, 'sphinx_index', 'production') %>'
   sql_sock: '/var/lib/mysql/mysql.sock'
   port: <%= sphinx_port %>
   enable_star: 1
   min_infix_len: 2
   max_matches: 20000

