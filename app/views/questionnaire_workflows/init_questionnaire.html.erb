<style type="text/css">
	.btn-right {
		margin-top:20px;
		float:right;
		width:120px;
		height:30px;
		color: rgb(255, 255, 255);
		border: 0px none;
		border-radius: 6px 6px 6px 6px;
		box-shadow: 0px 1px 0px rgba(255, 255, 255, 0.1) inset, 0px 1px 5px rgba(0, 0, 0, 0.25);
		transition: none 0s ease 0s;
		background-color: rgb(0, 68, 204);
	}
</style>
<div id="container">
	<%= form_for @vendor_questionnaire, :url => {:controller => "questionnaire_workflows", :action => "send_questionnaire"},:id => params[:id], :method=>"post" do |f| %>
		<div class="field">
			<label><b>Choose the vendor</b></label>
			<%= select :vendor_questionnaire, :vendor_id, @vendors.collect{|v| [v.name, v.id]} %>
		</div>
		<%= f.hidden_field :questionnaire_id, :value => @questionnaire.id %>
		<hr />
		<div class="field">
            <p><center><b><%= @questionnaire.title %></b></center></p>
                </div>

                <div class="field">

                        <%= @questionnaire.description %>	
                </div>

                <div id="questionnaire_questions">
                        <%= render "questions/init_questionnare_items" %>
                </div>

		<%= f.submit "Send", :class => "btn-right" %>
	<% end %>
</div>
