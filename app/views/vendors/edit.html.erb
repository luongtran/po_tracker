<%= form_for @vendor, :html => { :class => "edit full validate" } do |f| %>
<div id="errorExplanation" style="display: none;">
</div>
<div class="left">
  <p>
    <label>Name <span class="required">(required)</span></label>
    <%= f.text_field :name,  :class => "required text", :title => "Name can't be blank"%>
  </p>

  <div class="left">
  <p>
    <label>Vendor No</label>
    <%= f.text_field :vendor_no, :class => "text" %>
  </p>
  </div>
  
  <div class="right">
    <p>
      <label>Account No</label>
      <%= f.text_field :account_no, :class => "text" %>
    </p>  
  </div>
  
  <div class="left clear">
    <p>
      <label>Phone</label>
      <%= f.text_field :telephone, :class => "text" %>
    </p>
  </div>
  <div class="right">
    <p>
      <label>Fax</label>
      <%= f.text_field :fax, :class => "text" %>
    </p>
   </div>
   
   <div class="left clear">
     <p>
       <label>Contact Name</label>
       <%= f.text_field :contact_name, :class => "text" %>
     </p>
  </div>
    
  <div class="right">
    <p>
      <label>Email <span class="required">(required)</span></label>
      <%= f.text_field :email, :class => "required text", :title => "Email can't be blank" %>
    </p>
  </div>
  
  <div class="left clear">
    <p>
      <label>Contact Telephone</label>
      <%= f.text_field :contact_telephone, :class => "text" %>
    </p>
  </div>
</div>

<div class="right">
  <p>
    <label>Address</label>
    <%= f.text_field :address, :class => "text" %>
  </p>
  
  <div class="left">
    <p>
      <label>City</label>
      <%= f.text_field :city, :class => "text" %>
    </p>
  </div>
  
  <div class="right">
    <div class="left">
      <p>
        <label>State</label>
        <%= f.text_field :state, :class => "text" %>
      </p>
    </div>
    <div class="right">
      <p>
        <label>Zip</label>
        <%= f.text_field :zip, :class => "text" %>
      </p>
    </div>
  </div>
  
  <p class="clear">
    <label>Country</label>
    <%= f.text_field :country, :class => "text" %>
  </p>
  
  <div class="left clear">
    <p>
      <label>Last Updated</label>
      <%= f.text_field :updated_at, :disabled => true, :class => "text" %>
    </p>
  </div>
    
  <p class="clear">
    <label>Notes</label>
    <%= f.text_area :notes %>  
  </p>  
</div>


<p class="menu noprint clear">
  <%= submit_tag "Save Vendor", :class => "submit" %> or 
  <%= link_to_back %>
</p>

<% end %>